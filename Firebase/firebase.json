{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "hosting": {
      "port": 5000
    },
    "pubsub": {
      "port": 8085
    },
    "ui": {
      "enabled": true,
      "port": 4000
    },
    "auth": {
      "port": 9099
    },
    "singleProjectMode": false,
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080,
      "rules": "firestore.rules"
    },
    "database": {
      "port": 9000,
      "rules": "database.rules.json"
    },
    "storage": {
      "port": 9199,
      "rules": "storage.rules"
    },
    "eventarc": {
      "port": 9299
    },
    "dataconnect": {
      "port": 9399
    }
  }
}
